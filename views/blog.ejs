<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Blog</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>Welcome, <%= username %></h1>
      <a href="/logout" style="color: #fff;">Logout</a>
    </header>
  
    <section>
      <h2>Create Post</h2>
      <form action="/blog/create" method="POST">
        <input type="text" name="title" placeholder="Title" required>
        <textarea name="content" placeholder="Content" required></textarea>
        <button type="submit">Create Post</button>
      </form>
    </section>
    
    <section>
      <h2>All Posts</h2>
      <% posts.forEach(function(post) { %>
        <div class="post">
          <h3><%= post.title %></h3>
          <p><%= post.content %></p>
          <p>
            By: <%= post.username %> | Created at: <%= post.created_at %>
          </p>
          <% if (post.user_id === currentUser) { %>
            <form action="/blog/edit/<%= post.id %>" method="POST" style="display:inline;">
              <input type="text" name="title" value="<%= post.title %>" required>
              <input type="text" name="content" value="<%= post.content %>" required>
              <button type="submit">Edit</button>
            </form>
            <form action="/blog/delete/<%= post.id %>" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
            </form>
          <% } %>
        </div>
      <% }); %>
    </section>
    
    <footer>
      <p>Simple Blog App Â© 2025</p>
    </footer>
  </div>
</body>
</html>
